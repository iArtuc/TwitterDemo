<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/White"
                android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_tweet_list_fragment_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/LightGrey"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:src="@drawable/error_icon"/>

        <com.tretton.app.ui.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="@string/error"
            android:textColor="@color/text_color_dark"
            android:textSize="16sp"
            app:typeface="regular"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tretton.app.ui.CustomTextView
                android:id="@+id/txt_tweet_list_fragment_user_retweet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:text="Retweeted by "
                android:textColor="@color/text_color_light"
                android:textSize="13sp"
                app:typeface="medium"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_tweet_list_fragment_user_pic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="16dp"
                    android:scaleType="fitXY"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.tretton.app.ui.CustomTextView
                            android:id="@+id/txt_tweet_list_fragment_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ilkin artuc"
                            android:textColor="@color/text_color_dark"
                            android:textSize="14sp"
                            app:typeface="medium"/>

                        <com.tretton.app.ui.CustomTextView
                            android:id="@+id/txt_tweet_list_fragment_user_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/txt_tweet_list_fragment_user_name"
                            android:text="ilkin artuc"
                            android:textColor="@color/text_color_light"
                            android:textSize="13sp"
                            app:typeface="light"/>

                        <com.tretton.app.ui.CustomTextView
                            android:id="@+id/txt_tweet_list_fragment_user_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="ilkin artuc"
                            android:textColor="@color/text_color_light"
                            android:textSize="14sp"
                            app:typeface="light"/>

                    </RelativeLayout>

                    <com.tretton.app.ui.CustomTextView
                        android:id="@+id/txt_tweet_list_fragment_user_tweet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_dark"
                        android:textSize="15sp"
                        app:typeface="light"/>

                    <RelativeLayout
                        android:id="@+id/rl_tweet_list_fragment_user_media_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/text_color_light">

                        <ImageView
                            android:id="@+id/iv_tweet_list_fragment_user_media"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"/>

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="15dp"
                android:background="@color/LightGrey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <com.tretton.app.ui.CustomTextView
                    android:id="@+id/txt_tweet_list_fragment_tweet_retweet_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_color_dark"
                    android:textSize="14sp"
                    app:typeface="medium"/>

                <com.tretton.app.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="RETWEETS"
                    android:textColor="@color/text_color_light"
                    android:textSize="12sp"
                    app:typeface="light"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>